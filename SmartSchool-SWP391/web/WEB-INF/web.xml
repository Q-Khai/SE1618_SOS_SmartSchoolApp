<?xml version="1.0" encoding="UTF-8"?>
<web-app version="3.1" xmlns="http://xmlns.jcp.org/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd">
    <filter>
        <filter-name>ADFilter</filter-name>
        <filter-class>Filters.ADFilter</filter-class>
    </filter>
    <filter>
        <filter-name>RouterFilter</filter-name>
        <filter-class>Filters.RouterFilter</filter-class>
    </filter>
    <filter-mapping>
        <filter-name>RouterFilter</filter-name>
        <url-pattern>/*</url-pattern>
    </filter-mapping>
    <filter-mapping>
        <filter-name>ADFilter</filter-name>
        <url-pattern>/adminFreelance</url-pattern>
        <url-pattern>/adminLostAndFound</url-pattern>
        <url-pattern>/addCategory</url-pattern>
        <url-pattern>/addJobCategory</url-pattern>
        <url-pattern>/adminLostAndFoundPost</url-pattern>
        <url-pattern>/approveJob</url-pattern>
        <url-pattern>/approveJobPost</url-pattern>
        <!--<url-pattern>/approveUserWaiting</url-pattern>-->
        <url-pattern>/category</url-pattern>
        <url-pattern>/deleteCategory</url-pattern>
        <url-pattern>/deleteJobCategory</url-pattern>
        <url-pattern>/editCategory</url-pattern>
        <url-pattern>/editJobCategory</url-pattern>
        <url-pattern>/jobCategory</url-pattern>
        <url-pattern>/approvePost</url-pattern>
        <url-pattern>/listPostToApprove</url-pattern>
        <url-pattern>/noApprovePost</url-pattern>

        <!--<url-pattern>/listPostAppoving</url-pattern>-->
        <!--<servlet-name>AdminFreelanceController</servlet-name>-->
        
        
    </filter-mapping>
    <!--    <servlet-mapping>
        <url-pattern>controllers.*</url-pattern>
    </servlet-mapping>-->
    <servlet>
        <servlet-name>MainController</servlet-name>
        <servlet-class>controllers.MainController</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>MainController</servlet-name>
        <url-pattern>/main</url-pattern>
    </servlet-mapping>
    <session-config>
        <session-timeout>
            30
        </session-timeout>
    </session-config>
    <welcome-file-list>
        <welcome-file>WelcomePage.jsp</welcome-file>
    </welcome-file-list>
</web-app>
